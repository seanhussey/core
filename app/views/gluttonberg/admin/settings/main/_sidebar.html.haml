.span3
  .well.sidebar-nav
    %ul.nav.nav-list
      %li.nav-header
        Settings
      - if Rails.configuration.cms_based_public_css == true
        - if can? :manage , Gluttonberg::Stylesheet
          %li= active_link_to("Stylesheets", admin_stylesheets_path , :title => "Stylesheets")
      - if can? :manage, Gluttonberg::Locale
        - if Gluttonberg.localized?
          %li= active_link_to("Locales", admin_locales_path , :id => "localesNav" , :title => "Locales")
      - if can? :manage , Gluttonberg::Embed
        %li= active_link_to("Embeds", admin_embeds_path , :title => "Embed")

      - if can? :manage, Gluttonberg::Setting
        %li= active_link_to("Configuration", admin_configurations_path , :id => "metadataNav"  , :title => "Configurations")

      - if can? :create, User
        %li= active_link_to("Users", admin_users_path, :id => "usersNav" , :title => "Users")
      - else
        %li= active_link_to("Edit Account", edit_admin_user_path(current_user.id) , :title => "Edit Account", :id => "usersNav")

      %li= active_link_to("History", admin_global_history_path() , :title => "History", :id => "historyNav")


